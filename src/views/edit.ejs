<% include partials/_header %>

<div class="container"style="margin-top: 30px;">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3"style="margin-left: 335px;">
      <div class="card bg-warning">
        <h3 style="color: blueviolet;margin-top: 20px;margin-left: 100px;">Edición de platos</h3>
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="title" placeholder="nombre plato" value="<%= task.title %>">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="description" cols="80"
                placeholder="Agregue una descripción"
                ><%= task.description %></textarea>
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="precio" placeholder=" precio plato">
              <%= task.precio %>
            </div>
            <button class="btn btn-primary" type="submit">
              Actualizar 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% include partials/_footer%>

